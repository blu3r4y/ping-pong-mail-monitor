        <style type="text/css">
            .gitlab-corner-wrapper {
                overflow: hidden;
                width: 100px;
                height: 100px;
                position: absolute;
                top: 0;
                right: 0;
            }
            .gitlab-corner {
                position: absolute;
                top: -16px;
                right: -50px;
                z-index: 1;
                transform: rotate(45deg);
                background: #eee;
                border: #eee solid 44px;
                border-bottom: none;
                border-top: #eee solid 16px;
            }
            .gitlab-corner svg {
                width: 60px;
                height: 60px;
                margin-bottom: -4px;
            }
            .cls-r-1 {
                fill: #dd1f26;
            }
            .cls-r-2 {
